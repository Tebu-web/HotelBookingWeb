@page
@model HotelBookingWeb.Pages.Camere.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Camera</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Camera.CameraId" />
            <div class="form-group">
                <label asp-for="Camera.Numar" class="control-label"></label>
                <input asp-for="Camera.Numar" class="form-control" />
                <span asp-validation-for="Camera.Numar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Camera.Tip" class="control-label"></label>
                <input asp-for="Camera.Tip" class="form-control" />
                <span asp-validation-for="Camera.Tip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Camera.Pret" class="control-label"></label>
                <input asp-for="Camera.Pret" class="form-control" />
                <span asp-validation-for="Camera.Pret" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Camera.Disponibilitate" /> @Html.DisplayNameFor(model => model.Camera.Disponibilitate)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Camera.Descriere" class="control-label"></label>
                <input asp-for="Camera.Descriere" class="form-control" />
                <span asp-validation-for="Camera.Descriere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
